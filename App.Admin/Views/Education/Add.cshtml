@using App.Shared.Models
@model EducationSaveViewModel

@{
    ViewData["Title"] = "Add";
}

<div class="container mt-3">
    <div class="row">
        <h2>Add Education</h2>
        <partial name="Partials/ViewMessages" />
        <form asp-action="Add" method="post">
            <div class="mb-3">
                <label asp-for="School" class="form-label"></label>
                <input asp-for="School" class="form-control" required />
                <span asp-validation-for="School" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Degree" class="form-label"></label>
                <input asp-for="Degree" class="form-control" required />
                <span asp-validation-for="Degree" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FieldOfStudy" class="form-label"></label>
                <input asp-for="FieldOfStudy" class="form-control" required />
                <span asp-validation-for="FieldOfStudy" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="StartDate" class="form-label"></label>
                <input asp-for="StartDate" type="date" class="form-control" required />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="EndDate" class="form-label"></label>
                <input asp-for="EndDate" type="date" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="my-3">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Educations" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
