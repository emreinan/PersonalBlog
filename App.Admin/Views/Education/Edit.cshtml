@using App.Shared.Models
@model EducationViewModel

@{
    ViewData["Title"] = "Edit Education";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-3">
    <div class="row">
        <h2>Edit Education</h2>

        <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
            <div class="mb-3">
                <label asp-for="School" class="form-label">Okul</label>
                <input asp-for="School" class="form-control" required />
                <span asp-validation-for="School" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Degree" class="form-label">Derece</label>
                <input asp-for="Degree" class="form-control" required />
                <span asp-validation-for="Degree" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FieldOfStudy" class="form-label">Alan</label>
                <input asp-for="FieldOfStudy" class="form-control" required />
                <span asp-validation-for="FieldOfStudy" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="StartDate" class="form-label">Başlangıç Tarihi</label>
                <input asp-for="StartDate" type="date" class="form-control" required />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="EndDate" class="form-label">Bitiş Tarihi</label>
                <input asp-for="EndDate" type="date" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Düzenle</button>
            <a asp-action="Experiences" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

