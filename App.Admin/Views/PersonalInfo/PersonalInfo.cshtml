@using App.Shared.Models
@model PersonalInfoViewModel

@{
    ViewData["Title"] = "Personal Information";
}

<div class="container my-3">
    <div class="row">
        <div class="col-md-12">
            <h2>Personal Information</h2>
            <partial name="Partials/ViewMessages" />
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <th>FirstName</th>
                        <td>@Model.FirstName</td>
                    </tr>
                    <tr>
                        <th>LastName</th>
                        <td>@Model.LastName</td>
                    </tr>
                    <tr>
                        <th>Phone Number</th>
                        <td>@Model.PhoneNumber</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <th>Birth Date</th>
                        <td>@Model.BirthDate.ToShortDateString()</td>
                    </tr>
                    <tr>
                        <th>Address</th>
                        <td>@Model.Address</td>
                    </tr>
                </tbody>
            </table>
        <p><a asp-action="Edit" class="btn btn-primary mt-3">Edit</a></p>
        </div>
    </div>
</div>

