@using App.Shared.Models
@model CommentCreateViewModel

@{
    ViewData["Title"] = "Create Comment";
}

<div class="container my-3">
    <div class="row">
        <div class="col-md-12">
            <h2>Create Comment</h2>
            <form asp-action="CreateComment" method="post" asp-route-postId="@ViewData["PostId"]">
                @* <input type="hidden" asp-for="@ViewData["PostId"]" /> *@

                <div class="form-group">
                    <label asp-for="Content" class="form-label">Content</label>
                    <textarea asp-for="Content" class="form-control" required></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary">Create Comment</button>
                    <a asp-action="BlogPosts" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}