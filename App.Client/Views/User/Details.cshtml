@model UserViewModel

@{
    ViewBag.Title = "Profile Details";

}

<section id="profile-section" class="hero" style="margin-top: 100px;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center">
                <h2>Profile</h2>
                <div class="form-group">
                    <img src="@(string.IsNullOrEmpty(Model.ProfilePhotoUrl) ? "https://freesvg.org/img/abstract-user-flat-4.png": Url.Action("GetImage", "Home", new { fileUrl = Model.ProfilePhotoUrl }))"
                         alt="Profile Picture" class="img-thumbnail" style="width: 150px; height: 150px;">
                </div>
                <div class="form-group">
                    <label>Email:</label>
                    <p>@Model.Email</p>
                </div>
                <div class="form-group">
                    <label>Username:</label>
                    <p>@Model.UserName</p>
                </div>
                <a asp-action="Edit" class="btn btn-primary">Edit Profile</a> |
                <a asp-action="Delete" asp-route-id="@Model.Id" onclick="return confirm('Are you sure you want to delete this experience?');">Delete</a>
            </div>
        </div>
    </div>
</section>